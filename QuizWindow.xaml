<Window x:Class="CyberSecurityPOE.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White" Margin="10">
        <StackPanel>
            <TextBlock Name="QuestionText"
                       FontSize="20"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

            <Button Content="A" Name="OptionA" Click="Option_Click" Margin="0,5"/>
            <Button Content="B" Name="OptionB" Click="Option_Click" Margin="0,5"/>
            <Button Content="C" Name="OptionC" Click="Option_Click" Margin="0,5"/>
            <Button Content="D" Name="OptionD" Click="Option_Click" Margin="0,5"/>

            <TextBlock Name="FeedbackText"
                       FontSize="16"
                       Foreground="DarkGreen"
                       Margin="0,15"/>

            <Button Name="NextButton"
                    Content="Next"
                    Click="NextButton_Click"
                    Visibility="Collapsed"
                    Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
