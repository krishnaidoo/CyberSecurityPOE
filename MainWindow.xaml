<Window x:Class="CyberSecurityPOE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberSecurityPOE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid
        
        Height="450"
        Width="800"
        >
        <StackPanel>


            <TextBlock Text="Cybersecurity Chatbot" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBox Name="UserInputBox" Height="30" Margin="0,0,0,10" Text=""/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Ask" Width="100" Click="AskButton_Click" Margin="0,0,10,0"/>
                <Button Content="Show Activity Log" Width="150" Click="ShowActivityLog_Click"/>
                <Button Content="Start Quiz"
        Width="120"
        Margin="180,0,0,1"
        Click="StartQuiz_Click"/>

            </StackPanel>

            <TextBlock Text="Chat History:" FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox Name="ChatHistory" Height="300"/>
        </StackPanel>


    </Grid>
</Window>
